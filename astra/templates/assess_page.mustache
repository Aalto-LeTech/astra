{{!
Assess a submission manually.
Derived from A+ (a-plus/exercise/templates/exercise/staff/assess_submission.html).

Context variables:
* variables required by inspect_info.mustache
* form (HTML string) manual assessment form
}}

<div class="bs3-container-fluid">

<div class="col-md-5">
    {{> mod_astra/inspect_info }}
</div>
<div class="col-md-7">
    <h3>{{#str}} assessment, mod_astra {{/str}}</h3>
    <div class="well">
        {{{ form }}}
    </div>
</div>

</div>

<div id="default-modal" class="modal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

{{#js}}
require(['jquery', 'mod_astra/aplus_filemodal'], function($) {
  /* Enable file modal */
  $('.file-modal').aplusFileModal();
});
{{/js}}
